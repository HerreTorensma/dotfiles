# Screen warmth
super + w
	redshift -P -O 3000

super + v
	redshift -P -O 4500

super + c
	redshift -P -O 6500

# Volume keys
XF86AudioLowerVolume
	pamixer -d 2

XF86AudioRaiseVolume
	pamixer -i 2

XF86AudioMute
	pamixer -t

# TV mode
super + y
	enter_tv_mode
super + u
	exit_tv_mode

# mpd
super + shift + p
	mpc toggle

# slock
super + shift + l
	slock
